# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at 
# http://vivien.github.io/i3blocks

# https://github.com/vivien/i3blocks
# https://github.com/vivien/i3blocks-contrib

command=~/bin/x11/i3blocks/$BLOCK_NAME
separator=false
separator_block_width=15
markup=pango

[email]
interval=300

[cpu]
label=
interval=10

[memory]
label=
interval=10

[bandwidth]
interval=10

[disk]
label=
instance=/home
interval=30

[updates]
# shameless plug: https://github.com/keithieopia/piuw
label=
command=~/projects/piuw/piuw
markup=pango
interval=3600

[volume]
interval=once
signal=1

[battery]
interval=30

[datetime]
label=
command=date +'%a, %b %-e %l:%M %P'
interval=5



