#!/bin/bash

FILENAME=$(basename "$@")

NAME=${FILENAME%.*}
HASH=$(echo $NAME | egrep -o "[0-9A-F]{8}")
UNGARBAGE=$(echo $NAME | tr -d '\\()[]' | sed -r "s/${HASH}//" | sed -r 's/1920x1080//;s/Blu-Ray//;s/FLAC//' | sed -r 's/__//g;s/_/ /g')

echo $UNGARBAGE

