#!/bin/bash

if [ "$1" = "-h" ]; then
cat <<EOF
DESCRIPTION:
  a lightweight netcat replacement for the original whois program
  normally whois results include a giant block of legal text, this
  script parses that out to increase readability

USAGE:
  whois [DOMAIN]

INFO:
  github.com/keithieopia/bin
  MIT License
EOF
exit
fi

echo "$@" | nc whois.internic.net 43 | sed '/NOTICE:/q' | head -n -4 -