#!/bin/bash

#sudo -- sh -c 'chmod -x /usr/bin/tracker; chattr +i /usr/bin/tracker'
#sudo -- sh -c 'chmod -x /usr/libexec/tracker-extract; chattr +i /usr/libexec/tracker-extract'
#sudo -- sh -c 'chmod -x /usr/libexec/tracker-miner-fs; chattr +i /usr/libexec/tracker-miner-fs'
#sudo -- sh -c 'chmod -x /usr/libexec/tracker-store; chattr +i /usr/libexec/tracker-store'

tracker daemon -t
cd ~/.config/autostart
cp -v /etc/xdg/autostart/tracker-* ./
for FILE in $(ls tracker-*); do echo Hidden=true >> $FILE; done
rm -r ~/.cache/tracker ~/.local/share/tracker