#
# wm independent hotkeys
#
# Sample conf:
#    https://github.com/windelicato/dotfiles/blob/master/.config/sxhkd/sxhkdrc
#    https://github.com/ntrrgc/dotfiles/blob/master/sxhkdrc

# terminal emulator
super + Return
    urxvtc

# program launcher
super + d
#    dmenu_run
    j4-dmenu-desktop

# Firefox
super + f
    firefox

# Editor
super + e
    geany

# PCManFM
super + p
    pcmanfm

# Screenshot
Print
    scrot -bs ~/screenshot_%d%m%y_%H%M%S.png

# lockscreen
super + l
    ~/bin/wm/lockscreen.sh

# make sxhkd reload its configuration files:
super + r
    pkill -USR1 -x sxhkd

# quit bspwm normally
super + Escape
    bspc quit

#
# Windows
#

# close window
alt + F4
    bspc node -c ; paplay ~/bin/assets/sounds/close.ogg

# next window
alt + Tab
    bspc node -f next

# change window gap
super + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

# switch between fullscreen
super + F11
    bspc node -t {fullscreen,tiled}

# increase window size
super + alt + {KP_Left,KP_Down,KP_Up,KP_Left}
    bspc node @{west -r -10,south -r +10,north -r -10,east -r +10}

# decrease window size
super + control + {KP_Left,KP_Down,KP_Up,KP_Left}
    bspc node @{east -r -10,north -r +10,south -r -10,west -r +10}

# select window
super + {KP_Left,KP_Down,KP_Up,KP_Left}
    bspc node -f {west,south,north,east}

# swap window
super + shift + {KP_Left,KP_Down,KP_Up,KP_Left}
    bspc node -s {west,south,north,east}

#
# Desktops
#

# Select previous / next desktop
super + {bracketleft,bracketright}
    bspc desktop -f {prev.occupied,next.occupied}

# Select specific desktop
super + {1-9,0}
    bspc desktop -f ^{1-9,10}

#
# mouse
#

# focus
~button1
    bspc pointer -g focus

# start move/resize
super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

# end move/resize
super + @button{1-3}
    bspc pointer -u



#
# media keys
#

XF86Audio{RaiseVolume,LowerVolume,Mute}
    amixer -D pulse set Master {5%+,5%-,toggle}
    paplay $HOME/bin/assets/sounds/volume.ogg

XF86MonBrightness{Down,Up}
    xbacklight -{dec,inc} 10%

XF86Display
    xbacklight -set {0,100}%
